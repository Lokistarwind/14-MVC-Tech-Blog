<div class="row">
  <div class="col-auto">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

{{#if blogposts.length}}
<div class="row mt-4">
  <div class="col-md-6 blogpost-list">
    <h3>Current blogposts:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <form class="form update-blogpost-form" data-id="{{blogpost.id}}">
          <h3>Update blogpost:</h3>
          <div class="form-group">
            <label for="blogpost-name">blogpost title:</label>
            <input class="form-input" type="text" id="update-blogpost-name" name="update-blogpost-name" />
          </div>
          <div class="form-group">
            <label for="blogpost-desc">description:</label>
            <textarea class="form-input" id="update-blogpost-desc" name="update-blogpost-desc"></textarea>
          </div>
          {{!-- on update query redirect to dashboard --}}
          <button type="submit" class="btn btn-primary" data-id="{{blogpost.id}}">Update</button>
          
          <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <div class="col-md-6" id="reveal-blogpost-form">
    <h3>Create a New blogpost:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">blogpost title:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      <div class="form-group">
        <label for="blogpost-desc">description:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
<button class="btn btn-primary" id="newpost">+NEWPOST</button>

<script src="./js/dashboard.js"></script>