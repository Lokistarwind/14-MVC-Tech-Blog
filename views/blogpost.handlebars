<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{title}}
    </h2>
    <p>
      <span class="description">{{description}}</span>
    </p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
  </div>
</div>

{{#if logged_in}}
<div class="col-md-6">
    <form class="form new-comment-form" data-blogid={{id}}>
      <div class="form-group">
        <label for="comment-desc">Reply:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
{{/if}}


<h2>Comments: {{comments.length}}</h2>
 {{#each comments as |comment|}}
  <div class="comment-section" data-blogid={{id}}>
  <p>{{comment.description}}</p>
  <p>Created by {{comment.user.name}} on {{format_date date_created}}</p>
</div>
 {{/each}}

<script src="/js/comments.js"></script>
